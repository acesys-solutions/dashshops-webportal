{
    "openapi": "3.0.0",
    "info": {
        "title": "Dashshops Webportal API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Base URL"
        }
    ],
    "paths": {
        "/favorites": {
            "post": {
                "summary": "Create a favorite",
                "tags": [
                    "Favorites"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user_id": {
                                        "type": "number"
                                    },
                                    "retailer_id": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Favorite record created"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Favorite"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Favorite already exists"
                    }
                }
            }
        },
        "/favorites/{user_id}": {
            "get": {
                "summary": "Get all favorites",
                "tags": [
                    "Favorites"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Favorite"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/favorites/single/{user_id}/{retailer_id}": {
            "get": {
                "summary": "Get a favorite",
                "tags": [
                    "Favorites"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "retailer_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Data found"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Favorite"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Favorite record not found"
                    }
                }
            }
        },
        "/favorite/{user_id}/{retailer_id}": {
            "delete": {
                "summary": "Delete a favorite",
                "tags": [
                    "Favorites"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "retailer_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Favorite Removed"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Favorite record not found"
                    }
                }

            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "Favorite": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "example": 1
                    },
                    "user_id": {
                        "type": "number",
                        "example": 1
                    },
                    "retailer_id": {
                        "type": "number",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2024-04-19T10:24:54.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "example": "2024-04-19T10:24:54.000000Z"
                    }
                }
            }
        }
    }
}