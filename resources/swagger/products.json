{
    "openapi": "3.0.0",
    "info": {
        "title": "Dashshops Webportal API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Base URL"
        }
    ],
    "paths": {
        "/products/{id}": {
            "get": {
                "summary": "Get product by id",
                "tags": [
                    "Products"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "product": {
                                                    "$ref": "#/components/schemas/Product"
                                                },
                                                "variant": {
                                                    "$ref": "#/components/schemas/ProductVariant"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete product by id",
                "tags": [
                    "Products"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "status": {
                                                    "type": "boolean",
                                                    "example": true
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Product deleted successfully"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found or associated with sales",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Error Message"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/update": {
            "post": {
                "summary": "Create or update product",
                "tags": [
                    "Products"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "product_name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "category_id": {
                                        "type": "number"
                                    },
                                    "id": {
                                        "type": "number",
                                        "description": "If updating product, provide product id, otherwise 0 for new product",
                                        "example": 0
                                    },
                                    "image": {
                                        "type": "file"
                                    },
                                    "other_image_count": {
                                        "type": "number"
                                    },
                                    "image_0": {
                                        "type": "file"
                                    },
                                    "image_1": {
                                        "type": "file"
                                    },
                                    "overview": {
                                        "type": "string"
                                    },
                                    "images_to_delete": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "variants": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "on_sale": {
                                                    "type": "boolean"
                                                },
                                                "variant_types": {
                                                    "type": "string"
                                                },
                                                "variant_type_values": {
                                                    "type": "string"
                                                },
                                                "price": {
                                                    "type": "number"
                                                },
                                                "sale_price": {
                                                    "type": "number"
                                                },
                                                "quantity": {
                                                    "type": "number"
                                                },
                                                "low_stock_value": {
                                                    "type": "number"
                                                },
                                                "status": {
                                                    "type": "number"
                                                }
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "product_name",
                                    "description",
                                    "category_id",
                                    "id"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Product updated successfully"
                                        },
                                        "product_id": {
                                            "type": "number",
                                            "example": 1
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Could not find product with id associated to your store"
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            }
        },
