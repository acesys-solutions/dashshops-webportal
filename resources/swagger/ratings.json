{
    "openapi": "3.0.0",
    "info": {
        "title": "Dashshops Webportal API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Base URL"
        }
    ],
    "paths": {
        "/ratings/user/retailer{user_id}{retailer_id}": {
            "get": {
                "summary": "Get user retailer rating",
                "tags": [
                    "Ratings"
                ],
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "retailer_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Rating"
                                        },
                                        "status": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ratings/{approval_status}": {
            "get": {
                "summary": "Get ratings by approval status",
                "tags": [
                    "Ratings"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "approval_status",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/ratings/retailer{retailer_id}": {
            "get": {
                "summary": "Get retailer ratings",
                "tags": [
                    "Ratings"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "retailer_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Fetch Successful",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Rating"
                                    }
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ratings/retailersummary{retailer_id}": {
            "get": {
                "summary": "Get retailer rating summary",
                "tags": [
                    "Ratings"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "retailer_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Fetch Successful",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "$ref": "#/components/schemas/Rating"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ratings/update": {
            "post": {
                "summary": "Add or update rating",
                "tags": [
                    "Ratings"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Rating"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Rating Added",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Rating"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Sorry, you cannot rate your own store"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User Record Not Found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ratings{id}": {
            "delete": {
                "summary": "Delete rating",
                "tags": [
                    "Ratings"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Rating Deleted",
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Rating Deleted Successfully"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Rating Record Not Found",
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Rating Record Not Found"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "Rating": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "example": 1
                    },
                    "user_id": {
                        "type": "number",
                        "example": 1
                    },
                    "retailer_id": {
                        "type": "number",
                        "example": 1
                    },
                    "rating": {
                        "type": "number",
                        "example": 5
                    },
                    "comment": {
                        "type": "string",
                        "example": "Great service"
                    },
                    "approval_status": {
                        "type": "string",
                        "example": "Approved"
                    }
                }
            }
        }
    }
}